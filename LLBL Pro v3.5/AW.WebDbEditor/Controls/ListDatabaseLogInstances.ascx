				<asp:Button ID="btnDeleteExisting" runat="server" CausesValidation="false" CommandArgument='<%# DataBinder.Eval(Container,"RowIndex") %>' CommandName="Delete" Text="Delete" SkinID="ButtonSkin" OnClientClick='<%# "return confirm(\"Are you sure you want to delete this DatabaseLog instance with PK values: "  + "DatabaseLogID: " + Eval("DatabaseLogID") + " ?\");" %>'/>
